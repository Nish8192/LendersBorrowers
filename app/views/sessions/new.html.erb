<style>
#wrapper{
    width: 100%;
    display: inline-block;
    text-align: center;
}
#lender{
    width: 49%;
    text-align: center;
    display: inline-block;
}
#borrower{
    float: right;
    width: 49%;
    text-align: center;
    display: inline-block;
}
</style>
<div id="wrapper" style="width: 100%">
<div id="lender" style="width: 50%">
    <h1>Lender</h1>
    <form action="/lenders/create" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <p>First Name: <input type="text" name="first_name" id="fnL"></p>
        <p>Last Name: <input type="text" name="last_name" id="lnL"></p>
        <p>Email: <input type="text" name="email" id="lE"></p>
        <p>Password: <input type="text" name="password" id="lP"></p>
        <p>Money: <select name="money">
            <option value=100 selected>100</option>
            <option value=200>200</option>
            <option value=500>500</option>
            <option value=1000>1000</option>
            <option value=5000>5000</option>
            <option value=10000>10000</option>
        </select></p>
        <input type="submit" value="Register" id="lR">
    </form>
    <br>
    <form action="/login" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="type" value="Lender">
        <input type="submit" value="Already a Member?">
    </form>
</div>

<div id="borrower" style="width: 49%">
    <h1>Borrower</h1>
    <form action="/borrowers/create" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <p>First Name: <input type="text" name="first_name"></p>
        <p>Last Name: <input type="text" name="last_name"></p>
        <p>Email: <input type="text" name="email"></p>
        <p>Password: <input type="text" name="password"></p>
        <p>Need Money for? <input type="text" name="reason"></p>
        <p>Description: <textarea name="description" rows="8" cols="80"></textarea></p>
        <p>Money: <select name="needed">
            <option value=100 selected>100</option>
            <option value=200>200</option>
            <option value=300>300</option>
            <option value=400>400</option>
            <option value=500>500</option>
            <option value=1000>1000</option>
        </select></p>
        <input type="submit" value="Register">
    </form>
    <br>
    <form action="/login" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="type" value="Borrower">
        <input type="submit" value="Already a Member?">
    </form>
</div>
</div>
